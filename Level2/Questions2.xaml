        <Label x:Name="p2box" HorizontalAlignment="Left" Height="42" Margin="0,378,0,0"  Content="TextBox" VerticalAlignment="Top" Width="233" Foreground="White" FontFamily="Miriam Fixed" FontSize="20" Focusable="False" Grid.Row="1">
            <Label.Background>
                <ImageBrush/>
