        <Label x:Name="p1box" HorizontalAlignment="Left" Height="37" Margin="0,336,0,0"  Content="TextBox" VerticalAlignment="Top" Width="233" Foreground="White" FontFamily="Miriam Fixed" FontSize="20" Focusable="False" Grid.Row="1">
